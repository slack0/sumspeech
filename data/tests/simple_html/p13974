        function redirectRememberMe(secureBase,secureUrl) {
            if (window.location.protocol == 'https:') return;
            if (window.location.href.indexOf(secureBase) == 0) return;
            if (window.location.href == secureUrl) return;
            var key = $.cookie('key');
            if (key) {
                window.location.href = secureUrl;
            }
        }
        redirectRememberMe('https://secure.www.cfr.org','https://secure.www.cfr.org/elections/obamas-speech-woodrow-wilson-center/p13974');
