        function add_event(s,n) {
            if (!s.linkTrackEvents) {
                s.linkTrackEvents = '';
            } else {
                s.linkTrackEvents += ',';
            }
            if (!s.events) {
                s.events = '';
            } else {
                s.events += ',';
            }

            s.linkTrackEvents += 'event'+n;
            s.events += 'event'+n;
        }

        add_event(s,16);
if (document.title!='CFR'){
                s.pageName=document.title.replace(/[\s]+/g," ");
