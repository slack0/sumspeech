            prop31date = Math.floor(prop31date.getTime()/1000);
            s.prop31 = '' + (Math.floor((prop31date - s.prop31)/86400)) + '';
        }

        function pausecomp(millis) {
            var date = new Date();
            var curDate = null;

            do { curDate = new Date(); }
            while(curDate-date < millis);
        }

        //conditional if embedded on another site..
        //all that fit the bill go here
        if (window.location != window.parent.location){
            s.prop37 = s.eVar37 = document.referrer;
            s.server = document.referrer.split('/')[2];
        }

        
